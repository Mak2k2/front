				div(id="message_success" class="message")
					form.mainform
						p.email
							input(id="email_message" name="email" placeholder="Эл.почта")
							div(id="error_email" class="error")
						p.msg
							textarea(id="text_message" placeholder="Сообщение")
							div(id="error_text" class="error")
						p.send
							input(id="send_message" type="button" class="button_send" value="Отправить сообщение")
		script(src="scripts/jquery-3.5.1.slim.min.js")
		script(src="scripts/bundle.js")
		script(src="scripts/slick.min.js")
		script(src="scripts/jquery.magnific-popup.min.js")